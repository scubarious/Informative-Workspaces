<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ndm_try_catch.model.component_finder.class">NDM\TryCatchBundle\Entity\ComponentRepository</parameter>
    </parameters>

    <services>
        <service id="ndm_try_catch.model.component_finder" factory-service="doctrine.orm.entity_manager" factory-method="getRepository" class="%ndm_try_catch.model.component_finder.class%">
            <argument>NDMTryCatchBundle:Component</argument>
        </service>
    </services>
</container>
